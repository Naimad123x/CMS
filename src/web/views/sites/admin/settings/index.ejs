<html lang="en">
<head>
    <title><%= siteName %></title>
    <link rel="stylesheet" href="/settings/style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <style>
        body {
        background-image: linear-gradient(to right, #6a11cb, #2575fc); /* Gradient od fioletowego do niebieskiego */
    }
    .custom-update-btn {
        background-color: #4CAF50; /* Zielone tło */
        border-color: #4CAF50; /* Zielona ramka */
        color: white; /* Biały tekst */
    }
    .custom-update-btn:hover {
        background-color: #45a049; /* Ciemniejszy odcień zielonego dla hover */
        border-color: #45a049;
    }
    label {
        font-size: 23px; /* Zwiększ rozmiar czcionki dla etykiet */
    }
    .form-text {
        font-size: 20px; /* Zwiększ rozmiar czcionki dla tekstu pomocniczego */
    }
    </style>
</head>
<body>
    <div class="container text-center">
        <h1>settings</h1>
        <p id="result"></p>
        <form id="settingsForm" onsubmit="return false;">
            <div class="row g-3 align-items-center">
                <div class="col-auto text-start">
                    <label for="siteName" class="form-label">Site name</label>
                    <input type="text" class="form-control" name="siteName" id="siteName" />
                    <div id="siteNameHelp" class="form-text">Displayed site name</div>
                </div>
                <div class="col-auto text-start">
                    <label for="something" class="form-label">Something else</label>
                    <input type="number" class="form-control" name="something" id="something" max="999999"/>
                    <div id="somethingHelp" class="form-text">Something</div>
                </div>
                <div class="col align-self-end text-end">
                    <button id="settingsSubmit" type="submit" class="btn custom-update-btn" >Update</button>
                </div>
            </div>
        </form>
    </div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
<script src="/settings/script.js"></script>
</body>
</html>
