<html lang="en">
<head>
    <title><%= siteName %></title>
    <link rel="stylesheet" href="/builder/style.css">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <style>
        body {
            background-image: linear-gradient(to right, #6a11cb, #2575fc); /* Gradient od fioletowego do niebieskiego */
        }
    </style>
</head>
<body>
<div class="container text-center">
    <div class="row mb-5">
        <div class="col-12">
            <h1><%= siteName %> - Snippets</h1>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-8 align-self-center">

            <form id="snippets-form">
                <div class="mb-3">
                    <button type="submit" class="btn btn-success">Save</button>
                </div>
                <div class="mb-3">
                    <a href="/admin" class="btn btn-success">Back</a>
                </div>

                <div class="mb-3">
                    <label for="snippet-1" class="form-label">Snippet</label>
                    <textarea class="form-control" id="snippet-1" rows="10"></textarea>
                </div>
<!--                <div class="mb-3">-->
<!--                    <button type="button" class="btn btn-secondary" id="newSnptBtn">New snippet</button>-->
<!--                </div>-->
            </form>

        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy" crossorigin="anonymous"></script>
<script>
  const newSnptBtn = document.getElementById("newSnptBtn");
  const newSnippetsContainer = document.getElementById("new-snippets");
  const snippetTextarea = document.getElementById("snippet-1");
  snippetTextarea.textContent = "function snippet(nodePress){\n\n// Add your code here\n\n" +
    "}";
  newSnptBtn.addEventListener("click", () => {
    const newSnippet = document.createElement("div");
    newSnippet.classList.add("mb-3"); // Add Bootstrap spacing class

    const label = document.createElement("label");
    label.textContent = "Snippet";
    label.classList.add("form-label");
    label.setAttribute("for", `snippet-${newSnippetsContainer.children.length + 1}`); // Dynamic ID for label

    const textarea = document.createElement("textarea");
    textarea.classList.add("form-control");
    textarea.setAttribute("id", `snippet-${newSnippetsContainer.children.length + 1}`); // Dynamic ID for textarea
    textarea.setAttribute("rows", "10");

    newSnippet.appendChild(label);
    newSnippet.appendChild(textarea);

    newSnippetsContainer.appendChild(newSnippet);
  });
</script>
</body>
</html>